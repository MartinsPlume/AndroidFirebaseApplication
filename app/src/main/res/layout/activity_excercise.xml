<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/excerciseTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/titleExcerciseActivity"
        android:textAlignment="center"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/legexcerciseimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/excerciseTitleText"
        android:layout_alignEnd="@+id/legButton"
        android:layout_alignRight="@+id/legButton"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:srcCompat="@drawable/legexcerciseimage" />

    <Button
        android:id="@+id/legButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/excerciseTitleText"
        android:layout_alignParentRight="true"
        android:text="@string/legExcercises"/>

    <ImageView
        android:id="@+id/backexcerciseimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/legexcerciseimage"
        android:layout_alignEnd="@+id/backButton"
        android:layout_alignRight="@+id/backButton"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:srcCompat="@drawable/backexcerciseimage" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/legButton"
        android:layout_alignParentRight="true"
        android:text="@string/backExcercises"/>

    <ImageView
        android:id="@+id/chestexcerciseimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/backexcerciseimage"
        android:layout_alignEnd="@+id/chestButton"
        android:layout_alignRight="@+id/chestButton"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:srcCompat="@drawable/chestexcerciseimage" />

    <Button
        android:id="@+id/chestButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/backButton"
        android:layout_alignParentRight="true"
        android:text="@string/chestExcercises"/>

    <ImageView
        android:id="@+id/shouldersexcerciseimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/chestexcerciseimage"
        android:layout_alignEnd="@+id/shouldersButton"
        android:layout_alignRight="@+id/shouldersButton"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:srcCompat="@drawable/shoulderexcerciseimage" />

    <Button
        android:id="@+id/shouldersButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/chestButton"
        android:layout_alignParentRight="true"
        android:text="@string/shoulderExcercise"/>

    <ImageView
        android:id="@+id/armsexcerciseimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/shouldersexcerciseimage"
        android:layout_alignEnd="@+id/armsButton"
        android:layout_alignRight="@+id/armsButton"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:srcCompat="@drawable/armsexcerciseimage" />

    <Button
        android:id="@+id/armsButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/shouldersButton"
        android:layout_alignParentRight="true"
        android:text="@string/armsExcercise"/>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/homeScreen" />

</RelativeLayout>